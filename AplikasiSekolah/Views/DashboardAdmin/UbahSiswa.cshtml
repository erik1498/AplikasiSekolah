@model AplikasiSekolah.Models.SiswaModel
@{
    ViewBag.Title = "Ubah Siswa | Aplikasi Sekolah";
}

<div class="container-scroller">
    @Html.Partial("_Header")
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-md-6 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Ubah Siswa</h4>
                                @using (Html.BeginForm("UbahSiswa", "DashboardAdmin", FormMethod.Post, new { @class = "form-samples" }))
                                {

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.id)
                                    @Html.HiddenFor(model => model.id_auth)
                                    
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Nama)
                                        @Html.EditorFor(model => model.Nama, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Nama, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.username)
                                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" ,@placeholder = "Masukan Username Siswa" } })
                                        @Html.ValidationMessageFor(model => model.username, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.password)
                                        @Html.PasswordFor(model => model.password, new { @class = "form-control", @placeholder = "Masukan Password Siswa" })
                                        @Html.ValidationMessageFor(model => model.password, null, new { @class = "text-danger" })
                                    </div>
                                    <button type="submit" class="btn btn-primary mr-2">
                                        <i class="mdi mdi-content-save"></i>
                                        Simpan
                                    </button>
                                    <a href=@Url.Action("ListSiswa","DashboardAdmin") class="btn btn-light">Batal</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.Partial("_Footer")
        </div>
    </div>
</div>