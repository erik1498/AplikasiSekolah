@model IEnumerable<AplikasiSekolah.Models.JadwalModel>
@{
    ViewBag.Title = "Dashboard Admin";
}

<div class="container-scroller">
    @Html.Partial("_Header")
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-sm-8 flex-column d-flex stretch-card">
                        <div class="row">
                            <div class="col-lg-4 d-flex grid-margin stretch-card">
                                <div class="card sale-diffrence-border">
                                    <a class="card-body" href=@Url.Action("ListSiswa")>
                                        <h2 class="text-dark mb-2 font-weight-bold">@ViewBag.JumlahSiswa Siswa</h2>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-4 d-flex grid-margin stretch-card">
                                <div class="card sale-visit-statistics-border">
                                    <a class="card-body" href=@Url.Action("ListGuru")>
                                        <h2 class="text-dark mb-2 font-weight-bold">@ViewBag.JumlahGuru Guru</h2>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-4 d-flex grid-margin stretch-card">
                                <div class="card bg-primary">
                                    <a class="card-body" href=@Url.Action("ListMapel")>
                                        <h2 class="text-light mb-2 font-weight-bold">@ViewBag.JumlahMapel Mata Pelajaran</h2>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">Jadwal Pelajaran</h4>
                                        <a href=@Url.Action("TambahJadwal") class="btn btn-primary mb-2">
                                            <i class="mdi mdi-plus"></i>
                                            Tambah Jadwal
                                        </a>
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead>
                                                    <tr class="bg-dark text-light">
                                                        <th>Hari</th>
                                                        <th>Jam Mulai</th>
                                                        <th>Jam Selesai</th>
                                                        <th>Mata Pelajaran</th>
                                                        <th>Guru</th>
                                                        <th>Aksi</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                         <tr>
                                                            <td>@item.Hari</td>
                                                            <td>@item.Jam_Mulai</td>
                                                            <td>@item.Jam_Selesai</td>
                                                             <td>@item.Nama_Mata_Pelajaran</td>
                                                             <td>@item.Nama_guru</td>
                                                            <td>
                                                                <a class="btn btn-warning" href=@Url.Action("UbahJadwal", "DashboardAdmin", new { id = item.id})>
                                                                    <i class="mdi mdi-pencil"></i>
                                                                    Ubah
                                                                </a>
                                                                <a class="btn btn-danger" href=@Url.Action("HapusJadwal", "DashboardAdmin", new { id = item.id})>
                                                                    <i class="mdi mdi-delete"></i>
                                                                    Hapus
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 flex-column d-flex stretch-card">
                        <div class="row flex-grow">
                            <div class="col-sm-12 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-8 mb-3">
                                                <h3 class="font-weight-bold text-dark">Kupang, Nusa Tenggara Timur</h3>
                                                <p class="text-dark">@DateTime.Now.DayOfWeek @DateTime.Now.Hour.@DateTime.Now.Minute </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
            @Html.Partial("_Footer")
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

